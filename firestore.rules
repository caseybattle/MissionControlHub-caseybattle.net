rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /cards/{cardId} {
      allow read, write: if true;
    }
    match /categories/{catId} {
      allow read, write: if true;
    }
    match /messages/{messageId} {
      allow read, write: if true;
    }
    match /jobs/{jobId} {
      allow read, write: if true;
    }
    match /system/{docId} {
      allow read, write: if true;
    }
  }
}